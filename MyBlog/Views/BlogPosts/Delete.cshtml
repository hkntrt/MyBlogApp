@model MyBlog.Models.BlogPost

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-center" >Delete your post</h3>
<div class="row">
        <form method="POST" asp-action="DeletePOST">
            <input asp-for="Id" hidden/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input disabled asp-for="Title" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input disabled asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Article" class="control-label"></label>
                <textarea disabled asp-for="Article" class="form-control" style="height:15rem" ></textarea> 
            </div>
            
                <div class="row text-end mt-3 mb-5" >
                    <div class="form-group">
                    <a class="text-start btn btn-primary" asp-action="Index">Back to List</a>
                    <button type="submit" class="btn btn-warning"> <i class="bi bi-danger"></i> <i class="bi bi-trash"></i> &nbsp Delete </button>
                    </div>
                </div>
        </form>
</div>
